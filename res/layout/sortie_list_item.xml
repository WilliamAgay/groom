<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <ImageView android:id="@+id/ImageViewSortieListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher"
            android:singleLine="true"/>
    
    
  <TextView android:id="@+id/TextViewSortieListItemTitle"
      android:layout_toRightOf="@+id/ImageViewSortieListItemTitle"
            android:layout_width="fill_parent"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:singleLine="true"/>

  <TextView android:id="@+id/TextViewSortieListItemAdresse"
         android:layout_toRightOf="@+id/ImageViewSortieListItemTitle"
      android:layout_below="@+id/TextViewSortieListItemTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:singleLine="false"/>

</RelativeLayout>
