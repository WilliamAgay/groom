<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dip"
    android:background="@android:color/transparent"
    android:padding="0dip" >

    <RelativeLayout
        android:id="@+id/RelativeLayoutInitActivityContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="0dip" >

        <LinearLayout
            android:id="@+id/LinearLayoutInitActivityContainerTiles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/LinearLayoutInitActivityContainerFooter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/LinearLayoutInitActivityContainerHeader"
            android:layout_margin="0dip"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="0dip" >

            <TextView
                android:id="@+id/TextViewInitActivityTitre"
                style="@style/styleSettingsTxtTitre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:lines="2"
                android:paddingLeft="8dip"
                android:text="@string/title_activity_notif" />

            <RelativeLayout
                android:id="@+id/RelativeLayoutInitActivityLine1Tiles"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:padding="0dip" >

                <FrameLayout
                    android:id="@+id/FrameLayoutInitActivityTile1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_toLeftOf="@+id/ViewInitActivityLine1TilesSeparator" >

                    <include
                        android:id="@+id/IncludeInitActivityTile1"
                        layout="@layout/init_layout_tile" />
                </FrameLayout>

                <View
                    android:id="@+id/ViewInitActivityLine1TilesSeparator"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent" />

                <FrameLayout
                    android:id="@+id/FrameLayoutInitActivityTile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/ViewInitActivityLine1TilesSeparator" >

                    <include
                        android:id="@+id/IncludeInitActivityTile2"
                        layout="@layout/init_layout_tile" />
                </FrameLayout>
            </RelativeLayout>

            <View
                android:id="@+id/ViewInitActivityLine1Separator"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:id="@+id/RelativeLayoutInitActivityLine2Tiles"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:padding="0dip" >

                <FrameLayout
                    android:id="@+id/FrameLayoutInitActivityTile3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_toLeftOf="@+id/ViewInitActivityLine2TilesSeparator" >

                    <include
                        android:id="@+id/IncludeInitActivityTile3"
                        layout="@layout/init_layout_tile" />
                </FrameLayout>

                <View
                    android:id="@+id/ViewInitActivityLine2TilesSeparator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                     />

                <FrameLayout
                    android:id="@+id/FrameLayoutInitActivityTile4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_toRightOf="@+id/ViewInitActivityLine2TilesSeparator" >

                    <include
                        android:id="@+id/IncludeInitActivityTile4"
                        layout="@layout/init_layout_tile" />
                </FrameLayout>
            </RelativeLayout>

            <View
                android:id="@+id/ViewInitActivityLine2Separator"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                />

            <Button
                android:id="@+id/ImageViewInitActivitySettingsValider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:padding="2dip"
                android:text="VALIDER" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutInitActivityContainerFooter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:paddingTop="0dip" >

            <RelativeLayout
                android:id="@+id/RelativeLayoutInitActivityFooterContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" >

                <ImageView
                    android:id="@+id/ImageViewInitActivitySettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="2dip"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/TextViewInitActivityChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ImageViewInitActivitySettings"
                    android:paddingRight="5dip"
                    android:text="discutez directement avec votre conseiller! 24/24h" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>