<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutQuestionLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dip"
    android:background="@android:color/transparent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="10dip" 
    android:paddingRight="10dip" 
    
    >
    
    
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dip"
    android:layout_gravity="center"
    android:background="#EEEEEE"
    android:gravity="center"
    android:padding="10dip" >

    <TextView
        android:id="@+id/TextViewQuestionLayoutQ"
        style="@style/styleSettingsTxtTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="8dip"
        android:textColor="#000000"
        android:text="QUESTION?" />
    
    <RelativeLayout android:id="@+id/RelativeLayoutQuestionLayoutReponse" 
            android:layout_alignParentLeft="true"
        	android:layout_alignParentRight="true"
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           android:layout_below="@+id/TextViewQuestionLayoutQ" 
            >
    <EditText
        android:id="@+id/EditTextQuestionLayoutR"
        style="@style/styleSettingsTxtTitre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dip"
        android:singleLine="true"
        android:imeOptions="actionSend"
        android:textColor="#000000"  android:visibility="gone"
        android:hint="Veuillez entrer votre nom"
        android:text="" />
    
      <Spinner android:visibility="gone"
        android:id="@+id/SpinnerQuestionLayoutR"
        style="@style/styleSettingsTxtTitre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:entries="@array/situation_array"
         />
      
       <RelativeLayout android:visibility="gone"
        android:id="@+id/RelativeLayoutQuestionLayoutSeekerContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >
       
      <TextView android:id="@+id/TextViewQuestionLayoutRSeeker" 
           android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
            android:text="0€" 
           android:textColor="#000000"
           android:layout_marginTop="-2dp"
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           />
      
        <TextView android:id="@+id/TextViewQuestionLayoutRSeeker450" 
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:text="450€" 
           android:textColor="#000000"
           android:layout_marginTop="-2dp"
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
            />
        
       <TextView android:id="@+id/TextViewQuestionLayoutRSeeker900" 
           android:layout_alignParentTop="true"
           android:layout_alignParentRight="true"
           android:text=">900€" 
           android:textColor="#000000"
           android:layout_marginTop="-2dp"
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
            />
       
      
      <TextView android:id="@+id/TextViewQuestionLayoutRSeeker900" 
           android:layout_alignParentTop="true"
           android:layout_alignParentRight="true"
           android:text=">900€" 
           android:textColor="#000000"
           android:layout_marginTop="-2dp"
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
            />
      
       <SeekBar android:id="@+id/SeekBarQuestionLayoutR" 
           android:layout_below="@+id/TextViewQuestionLayoutRSeeker"
           android:max="900" 
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content" 
           android:layout_marginTop="6dp" />
    	</RelativeLayout>
       </RelativeLayout>
    <Button
                android:id="@+id/ButtonQuestionLayoutGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_below="@+id/RelativeLayoutQuestionLayoutReponse"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
               
                android:background="@drawable/ic_arrow_black" />
    
    
    
    </RelativeLayout>

</LinearLayout>
</merge>